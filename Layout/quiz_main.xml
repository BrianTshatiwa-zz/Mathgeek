<Button
    android:id="@+id/expressions"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:text="Algebra" />   

<Button
    android:id="@+id/word"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:text="Word problems" />    

 <Button
    android:id="@+id/finance"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:text="Financial Mathematics" />    
 
